.avatar {
    width: 200px;
    height: 200px;
    overflow: hidden;
    border-radius: 50%;
}

.user__avatar {
    display: flex;
    justify-content: center;
}

.avatar__image {
    width: 100%;
    height: 100%;
}

.user__text {
    margin-top: 60px;
}

.user__data-row {
    line-height: 40px;
    font-weight: 600;
}

.user__data-col {
    font-weight: 600;
    padding-right: 75px;
    &:first-child {
        color: #3c3e41;
    }
}
